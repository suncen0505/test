<script>

jQuery(function(){
		$("#Game").on("change",function(){
			jQuery.ajax({
				url:"/test/selectserver",
				type:"get",
				dataType: "json",
				data:{gameId:$(this).val()},
				success:function(data){
					var html='';
					html+='<option value="-1">请选择区服</option>'
					for(var o in data){
						html+='<option value="'+data[o]["code"]+'">'+data[o]["name"]+'</option>'
					}
					$("#servers").empty().html(html);
				}			
			})
		});
	});


</script>
